[OSEv3:children]
masters
nodes
etcd

[masters]
${IP} openshift_ip=${IP} ansible_connection=local openshift_schedulable=true

[etcd]
${IP} openshift_ip=${IP} ansible_connection=local 

[nodes]
${IP} openshift_ip=${IP} ansible_connection=local openshift_schedulable=true openshift_node_group_name='node-config-all-in-one'

[OSEv3:vars]
ansible_ssh_user=root

deployment_type=origin
openshift_deployment_type=origin

openshift_examples_modify_imagestreams=true

openshift_metrics_install_metrics=true
openshift_logging_install_logging=true

openshift_public_hostname=console.${DOMAIN}
openshift_master_default_subdomain=apps.${DOMAIN}

openshift_metrics_cassandra_image=docker.io/openshift/origin-metrics-cassandra:v3.10.0-rc.0
#openshift_metrics_hawkular_agent_image=docker.io/openshift/origin-metrics-hawkular-openshift-agent:v3.10.0-rc.0
openshift_metrics_hawkular_metrics_image=docker.io/openshift/origin-metrics-hawkular-metrics:v3.10.0-rc.0
#openshift_metrics_schema_installer_image=docker.io/rimolive/origin-metrics-schema-installer:latest
openshift_metrics_schema_installer_image=docker.io/alv91/origin-metrics-schema-installer:latest
openshift_metrics_heapster_image=docker.io/openshift/origin-metrics-heapster:v3.10.0-rc.0

openshift_disable_check=memory_availability,disk_availability,docker_image_availability

openshift_master_identity_providers=[{'name': 'htpasswd_auth', 'login': 'true', 'challenge': 'true', 'kind': 'HTPasswdPasswordIdentityProvider'}]
